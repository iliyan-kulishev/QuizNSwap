@model QuizNSwap.ViewModels.RegistrationViewModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
     <link rel="stylesheet" href="/assets/app.css">
     <link href="https://fonts.googleapis.com/css?family=Muli:400,700,900&display=swap" rel="stylesheet">
             <link rel="dns-prefetch" href="https://fonts.googleapis.com/">

</head>
<body class="body--purple"> 
    <div class="wrapper--register">
    <section class="main--register">
        <div class="register--container">
            <p>Already have an account? <a asp-controller="User" asp-action="Index" class="link--home">Log in</a></p>
      
    <h1>Create account</h1>
   <div asp-validation-summary="All"></div>

    <form class="register" asp-controller="Register" asp-action="Signup" method="post">
        <label class="register__label" asp-for="UserName">Username</label>
        <input class="register__input" asp-for="UserName" type="text"/>
        <label class="register__label" asp-for="Email">Email</label>
        <input class="register__input" asp-for="Email" type="text"/>
        <label class="register__label" asp-for="Password">Password</label>
        <input class="register__input" asp-for="Password" type="password"/>
        <p class="register__message-password">Password must contain at least 6 characters.</p>

        <button class="btn btn--blue" type="submit">Sign Up</button>
    </form>
    </div>
   
    </section>
    <section class="illustrations">
    <img class="illustrations__img--main" alt="illustration" src="/images/start-illustration.svg">
    </section>
</div>
    
</body>
</html>
